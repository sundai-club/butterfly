{
  "manifest_version": 3,
  "name": "Butterfly",
  "version": "1.3",
  "description": "AI-powered comment suggestions for LinkedIn, Product Hunt, and Twitter/X using Google Gemini.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.producthunt.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content_linkedin.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://www.producthunt.com/*"
      ],
      "js": [
        "content_producthunt.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content_twitter.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Butterfly Settings"
  },
  "icons": {
    "128": "icon128.png"
  }
}